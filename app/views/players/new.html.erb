<h1>Ny spiller</h1>

<div class="row">
  <div class="span6 offset1">
    <%= form_for(@player) do |f| %>
      <%= render 'shared/error_messages', :update => @player %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :club_id %>
      <%= f.collection_select :club_id, Club.all, :id, :name, include_blank: true %>

      <%= f.label :ranking_points %>
      <%= f.text_field :ranking_points %>      

      <%= f.submit "Opret spiller", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
