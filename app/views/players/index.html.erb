<% provide(:title, 'Rangliste') %>
<h1>Rangliste</h1>
<table class="table table-striped table-condensed">
	<thead>
	<tr>
		<th></th>
		<th>#</th>
		<th>Navn</th>
		<th>Klub</th>
		<% @tournaments.each do |tour| %>
			<th width="60"><%= link_to tour.name, tour %></th>
		<% end %>
		<th>Point</th>
	</tr>
	</thead>
	<tbody>
	<% @players.each do |player| %>
   		<%= render 'ranking_row', :info => {:player => player, :tournaments => @tournaments} %>	
  	<% end %>
  	</tbody>
</table>

