<% provide(:title, 'Rangliste') %>

<table class="table table-striped table-condensed small-text">
	<thead>
	<tr>
		<th></th>
		<th>#</th>
		<th>Navn</th>
		<th>Klub</th>		
		<% @tournaments.each_with_index do |tour,i| %>
			<th width="55" align="center" style="text-align: center;"><%= 
			if i > 2
				link_to image_tag('test.jpg'), tour
			else 
				link_to image_tag('test2.jpg'), tour
			end %></th>
		<% end %>
		<th>Point</th>
	</tr>
	</thead>
	<tbody>
	<% @ranking_players.each do |player| %>
   		<%= render 'ranking_row', :info => {:player => player, :tournaments => @tournaments} %>	
  	<% end %>
  	</tbody>
</table>

