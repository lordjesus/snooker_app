<% provide(:title, 'Profil') %>
<h1><%= @player.name %></h1>

<p>Navn: <%= @player.name %></p>
<p>Klub: <%= link_to(@player.club.name, @player.club) %></p>
<p>Ranglistepoint: <%= @player.ranking_points %></p>

<% if @player.high_break.count > 0 %>
	<p>
		<strong>Breaks:</strong>
		<% @player.high_break.order('break desc').each_with_index do |b,i| %>
			<% if i > 0 %>
			,
			<% end %>
			<%= link_to b.break, b.tournament %>
		<% end %>
	</p>
<% end %>

<% if @player.enter.where('tournament_id IN (SELECT DISTINCT(id) FROM tournaments WHERE finished = 1)').count > 0 %>
	<h2>Turneringer</h2>
<table class="table table-striped table-condensed table-bordered">
<thead>
	<tr>			
		<th>Navn</th>
		<th>Placering</th>	
		
	</tr>
	</thead>
	<tbody>

	<% @player.enter.where('tournament_id IN (SELECT DISTINCT(id) FROM tournaments WHERE finished = 1)').each do |e| %>
	<tr>

		<td><%= link_to e.tournament.name, e.tournament %></td>
		<td><%= get_rank(e.rank) %></td>

		
	</tr>
	<% end %>
	</tbody>
</table>
<% end %>