<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">      
      <p id="logo"><%= yield(:title) %></p>
      <nav>
        <ul class="nav pull-right">          
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Rangliste", root_path %></li>
          <li class="<%= 'active' if current_page?(breaks_path) %>"><%= link_to "Breaks", breaks_path %></li>
          <li class="<%= 'active' if current_page?(tournaments_path) %>"><%= link_to "Turneringer", tournaments_path %></li>
          <li class="<%= 'active' if current_page?(clubs_path) %>"><%= link_to "Klubber", clubs_path %></li>
          <% if signed_in? %>
            
            <% if is_admin?(current_user) %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Admin <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Brugere", admin_users_path %></li>
                <li><%= link_to "Spillere", admin_players_path %></li>
                <li><%= link_to "Turneringer", admin_tournaments_path %></li>
                <li><%= link_to "Klubber", admin_clubs_path %></li>                
              </ul>
            </li>
              
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Konto <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profil", current_user %></li>
                <li><%= link_to "Indstillinger", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log ud", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log ind", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>