<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset1">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', :update => @user %>
      
      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label 'VÃ¦lg dig selv fra listen' %>
      <%= f.collection_select :player_id, Player.find(:all, :conditions => ['id not in (?)', Player.joins(:user)]), :id, :name, include_blank: true %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>